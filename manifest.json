{
  "name": "Chrome Audio Recorder",
  "description": "Record tab audio and microphone simultaneously with AI transcription. Features noise suppression, echo cancellation, and Google Gemini-powered transcription.",
  "version": "2.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "author": "Chrome Audio Recorder Team",
  "homepage_url": "https://github.com/yourusername/chrome-recorder-extension",
  "action": {
    "default_icon": "icons/not-recording.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["tabCapture", "offscreen", "activeTab", "storage"],
  "host_permissions": ["*://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "permission.html",
        "offscreen.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icons/not-recording.png",
    "128": "icons/not-recording.png"
  }
}
